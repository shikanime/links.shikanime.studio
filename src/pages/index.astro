---
import "@fontsource-variable/inter";
import { Image } from "astro:assets";
import Avatar from "../assets/avatar.webp";
import AvatarHappy from "../assets/avatar-happy.webp";

export const prerender = true;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>Shikanime</title>
    <meta name="description" content="Shikanime" />
  </head>
  <body>
    <div class="hero min-h-screen">
      <div class="hero-content my-4 flex-col space-y-2">
        <label class="swap">
          <input type="checkbox" />
          <div class="swap-on">
            <Image
              src={AvatarHappy}
              alt="avatar happy"
              width="150"
              height="150"
              class="rounded-full border-2 border-white"
              quality="max"
            />
          </div>
          <div class="swap-off">
            <Image
              src={Avatar}
              alt="avatar"
              width="150"
              height="150"
              class="rounded-full border-2 border-white"
              quality="max"
              loading="eager"
            />
          </div>
        </label>

        <div class="text-center">
          <h2 class="font-mono text-2xl font-bold text-white">@Shikanime</h2>
          <p class="mt-2 font-mono text-white">もう一度人生を楽しくしましょう！</p>
        </div>

        <a
          href="https://github.com/shikanime"
          class="btn btn-circle btn-primary w-full"
        >
          💾 Github
        </a>
        <a
          href="https://linkedin.com/in/williamphetsinorath"
          class="btn btn-circle btn-primary w-full"
        >
          🗺️ LinkedIn
        </a>
        <a
          href="https://perpetual-lift-555.notion.site/Shikanime-s-Beulogue-800bdfcb54b94392950d3426386c9c88"
          class="btn btn-circle btn-primary w-full"
        >
          📖 Blog
        </a>
        <a
          href="https://myanimelist.net/profile/Shikalegend"
          class="btn btn-circle btn-primary w-full"
        >
          🎏 MyAnimeList
        </a>
        <a
          href="https://infinityhorizons.shikanime.studio"
          class="btn btn-circle btn-primary w-full"
        >
          🔮 Infinity Horizons
        </a>
      </div>
    </div>
  </body>
</html>
